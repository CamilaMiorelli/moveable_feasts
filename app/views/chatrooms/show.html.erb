<h1>#<%= @chatroom.feast.title %></h1>
<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>
<%= simple_form_for [ @message ], url: feast_chatroom_messages_url(params[:feast_id]), remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.feast.title}" %>
  <%= f.submit :submit %>
<% end %>
