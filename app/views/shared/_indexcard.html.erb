<div class="default-card-index">
<div class="default-card-body">

<div class = "card-inner">
<div>
    <% if feast.photo.present? %>
      <%= cl_image_tag feast.photo.key, crop: :fill, class: "index-img" %>
    <% end %>
    <div class = "default-card-title">
    <h4><%= feast.title %></h4>
    </div>
    <div class = "card-paragraph">
    <p class="default-card-mealtype"><%= feast.meal_type %>  <span class = "default-card-price <%= feast.photo.attached? ? 'yes-img' : 'no-img-price' %>
    "><%= humanized_money_with_symbol feast.price %></span></p>
    <p class="default-card-guests"><%= feast.guest_limit %></p>
    <p class="default-card-address"> <%= feast.address %></p>
    <p class="default-card-time"> <%= feast.start_at %></p>
    <//p class="default-card-text"> <%#= feast.status %><//p>
    </div>
    </div>
    <%= link_to "available now", feast_path(feast), class: "bttn1 bttn" %>
    <% if feast.user.photo.attached? %>
      <%= cl_image_tag feast.user.photo.key, class: "avatar index-avatar #{feast.photo.attached? ? 'yes' : 'no-img-avatar'}" %>
    <% else %>
      <<%= image_tag 'https://res.cloudinary.com/dpqkzfvuf/image/upload/v1599638681/cf22479151a6f9e1aef98f3ff1f15e40_xunu6p.png', class: "avatar index-avatar" %>>
    <% end %>
  </div>
  </div>
</div>

